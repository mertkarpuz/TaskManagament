@model WorkListAllDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Reports.Count > 0)
{
    <a class="btn btn-outline-dark my-2" asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank"><i class="fas fa-file-excel mr-2"></i>Excel</a>
    <a class="btn btn-outline-dark my-2" asp-action="GetPdf" asp-route-id="@Model.Id" target="_blank"><i class="fas fa-file-pdf mr-2"></i>Pdf</a>
    <table class="table table-hover table-sm text-center mt-2 table-bordered">
        <tr class="bg-primary text-white">
            <th colspan="2">" @Model.AppUser.Name @Model.AppUser.Surname.ToUpper() " personelinizin @Model.Name görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var item in Model.Reports)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Detail</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname personelimiz şu anda @Model.Name görevi üzerinde çalışıyor. Henüz bir rapor yazmamış.
    </div>
}
