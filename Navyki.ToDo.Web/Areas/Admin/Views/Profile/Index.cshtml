@model AppUserListVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (TempData["message"] != null)
{
<div class="alert alert-warning mt-2 alert-dismissible fade show" role="alert">
    @TempData["message"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}


<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <span asp-validation-for="@Model.Name"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname"></label>
        <span asp-validation-for="@Model.Surname"></span>
        <input asp-for="@Model.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h5 class="">Şu an ki resminiz</h5>
                    <img src="~/img/@Model.Picture" class="" style="height:10rem!important;" alt="@Model.Name" />
                </div>

            </div>
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <div id="areaPreview" style="display:none !important;">
                    <h5 class="">Seçtiğiniz resim:</h5>
                    <img src="" id="imagePreview" style="height:10rem!important;" />
                </div>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-12">
                <label>Resim Seç:</label>
                <input type="file" id="Image" class="form-control-file" name="Image" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm mt-2"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

@section JavaScript{
    <script>
        $(document).ready(function () {
            $("#Image").change(function (e) {
                $("#areaPreview").show();
                $("#imagePreview").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}