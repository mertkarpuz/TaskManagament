@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}



<form asp-action="Login" method="post" class="mt-5 w-50 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı:</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Şifre:</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input"/>
        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
    </div>
    <a asp-action="Register" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />
</form>