@model AppUserListVM

@{ string active = string.Empty;
@if (TempData["Active"] != null)
{
    active = TempData["Active"].ToString();
} }


<div class="border border-right" id="sidebar-wrapper">
    <div class="sidebar-heading">
        <img src="~/img/@Model.Picture" alt="@Model.Name" class="img-thumbnail img-fluid  " style="height:10rem!important;" />
    </div>
    <div class="list-group list-group-flush">
        <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action @(active=="home"?"active":"")"><i class="fas fa-home mr-2"></i>Anasayfa</a>
        <a asp-controller="Work" asp-action="Index" class="list-group-item list-group-item-action @(active=="works"?"active":"")"><i class="fas fa-arrow-alt-circle-down mr-2"></i>Gelen İş Emirleri</a>
        <a asp-controller="WorkState" asp-action="Index" class="list-group-item list-group-item-action @(active=="Complete"?"active":"")"><i class="fas fa-arrow-alt-circle-up mr-2 "></i>Tamamladığım işler </a>
        <a asp-controller="Notification" asp-action="Index" class="list-group-item list-group-item-action @(active=="notification"?"active":"")">
            <i class="far fa-bell mr-3"></i>

            @if (ViewBag.NotificationCount > 0)
            {
                <sub class="badge badge-info badge-pill position-absolute" style="bottom:0.625rem!important;left:1.7rem!important"><small>@ViewBag.NotificationCount</small></sub>}

            Bildirimler
        </a>
        <a asp-action="Index" asp-controller="Profile" class="list-group-item list-group-item-action @(active=="profile"?"active":"")"><i class="fas fa-user mr-2"></i>Profilim</a>
        <a asp-action="LogOut" asp-controller="Home" asp-area="" class="list-group-item list-group-item-action"><i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap</a>
    </div>
</div>